<h1>Your Cart:</h1>
<% if session[:cart] %>
    <% session[:cart].each do |item| %>
        <p><%= item %></p>
    <% end %>
<% else %>
    <p>Your cart is currently empty</p>
    <% end %>

    <%= form_tag ('/products') do %>
    <label>Product:</label>>
    <%= text_area_tag :'product' %><br>

    <%= submit_tag "add to cart" %>
<% end %>

